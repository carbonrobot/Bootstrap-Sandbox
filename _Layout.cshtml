<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head id="Head1" runat="server">
    <title>@ViewBag.Title</title>
    <link href="@(Url.Content("~/Content/bootstrap.css"))" rel="stylesheet" type="text/css" />
    <link href="@(Url.Content("~/Content/redmond/jquery-ui-1.8.16.custom.css"))" rel="Stylesheet" type="text/css" />
    <link href="@(Url.Content("~/Content/Site.css"))" rel="stylesheet" type="text/css" />
</head>
<body>
    <!-- Site Header -->
    <header>
        <div class="container">
            <div class="row-fluid">
                <div class="navbar">
                    <div class="navbar-inner navbar-site">
                        <img class="brand-image" src="@Url.Content("~/content/images/am_ahi.png")" alt="" />
                        <span class="product-name">Time Tracker</span>
                        <div class="userbox">
                            <div class="userbox-employee">
                                Employee: @Authentication.Current.EmployeeInfo.UserName/@Authentication.Current.EmployeeInfo.ID
                            </div>
                            <div class="userbox-manager">
                                Manager: @Authentication.Current.EmployeeInfo.Manager
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </header>
    
    <!-- Site Body -->
    <main>
        @RenderBody()
    </main>

    <!-- Site Footer -->
    <footer>
        <div class="container">
            <div class="row-fluid">
                <div class="span12">
                    @Html.Partial("InternalFooter")            
                </div>
            </div>
        </div>
    </footer>

    <!-- Enable MVC Client Validation -->
    @{ Html.EnableClientValidation();}
    <script src="@Url.Content("~/Scripts/vendor/jquery-2.0.0.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/vendor/jquery-ui-1.10.3.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/vendor/bootstrap.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/vendor/knockout-2.1.0.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/vendor/knockout.mapping-latest.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/vendor/perpetuum.knockout.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/TimeTracker/ko-custom-bindings.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/TimeTracker/main.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/vendor/jquery.numeric.js")" type="text/javascript"></script>
    @RenderSection("Scripts", false)
</body>
</html>
