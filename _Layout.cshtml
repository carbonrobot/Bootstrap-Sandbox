<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewBag.Title</title>

    <link href="@(Url.Content("~/Content/bootstrap.css"))" rel="stylesheet" type="text/css" />
    <link href="@(Url.Content("~/Content/theme.css"))" rel="stylesheet" type="text/css" />

    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
      <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>
<body>
    <div class="full-page-app">

        <!-- Site Header -->
        <header class="header">
            <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
                <div class="container-fluid">
                    <!-- Brand and toggle get grouped for better mobile display -->
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navbar-collapse-target">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        <div class="navbar-brand-logo navbar-left">
                            <img src="@Url.Content("~/content/img/compass_100x100.png")" alt="" />
                            >
                        </div>
                        <a class="navbar-brand navbar-left" href="#">Time Tracker</a>
                    </div>

                    <!-- All nav is floated right, reverse order, and wrapped up in a collapsible div -->
                    <div class="collapse navbar-collapse" id="navbar-collapse-target">
                        <div class="navbar-avatar navbar-right">
                            <img src="http://www.gravatar.com/avatar/c81a212fe4573c86710ea7c4946d4ebb.png" alt="" />
                        </div>
                        <div class="navbar-user navbar-right">@Authentication.Current.EmployeeInfo.UserName</div>

                        <ul class="nav navbar-nav navbar-left">
                            <li class="active"><a href="#">Timesheet</a></li>
                        </ul>
                    </div><!-- /.navbar-collapse -->
                </div><!-- /.container-fluid -->
            </nav>
        </header>

        <!-- Site Body -->
        <main class="main" role="main">
            @RenderBody()
        </main>

        <footer class="footer">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-sm-12">
                        @Html.Partial("InternalFooter")
                    </div>
                </div>
            </div>
        </footer>
    </div>

    <!-- Enable MVC Client Validation -->
    @{ Html.EnableClientValidation();}
    <script src="@Url.Content("~/Scripts/vendor/jquery-2.0.0.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/vendor/jquery.numeric.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/vendor/bootstrap.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/vendor/knockout-2.1.0.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/vendor/knockout.mapping-latest.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/vendor/perpetuum.knockout.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/TimeTracker/ko-custom-bindings.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/TimeTracker/main.js")" type="text/javascript"></script>

    @RenderSection("Scripts", false)
</body>
</html>
